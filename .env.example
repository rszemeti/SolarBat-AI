# Home Assistant Connection
HA_URL=http://homeassistant.local:8123
HA_TOKEN=your_long_lived_access_token_here

# ============================================
# BATTERY & INVERTER (from your Predbat config)
# ============================================
BATTERY_SOC=sensor.solis8_battery_soc
BATTERY_CAPACITY=32
BATTERY_VOLTAGE=52
BATTERY_POWER=sensor.solis8_battery_power
MAX_CHARGE_CURRENT=sensor.solis8_battery_charge_max_current
MAX_DISCHARGE_CURRENT=sensor.solis8_battery_discharge_max_current

# ============================================
# POWER SENSORS
# ============================================
PV_POWER=sensor.solis8_pv_total_power
GRID_POWER=sensor.solis8_meter_active_power_total
LOAD_POWER=sensor.solis8_house_load

# ============================================
# SOLCAST SOLAR FORECAST
# ============================================
SOLCAST_REMAINING=sensor.solcast_pv_forecast_forecast_remaining_today
SOLCAST_TOMORROW=sensor.solcast_pv_forecast_forecast_tomorrow
SOLCAST_FORECAST_TODAY=sensor.solcast_pv_forecast_forecast_today

# Solar scaling factor (for testing/simulation)
# 1.0 = actual forecast, 2.0 = double solar, 0.5 = half solar
# Useful for testing clipping prevention and mode switching
SOLAR_SCALING=1.0

# ============================================
# OCTOPUS AGILE PRICING
# Auto-detected by test harness
# ============================================

# ============================================
# SOLIS S6 CHARGE SLOT 1
# ============================================
CHARGE_SLOT1_START_HOUR=number.solis8_timed_charge_start_hours
CHARGE_SLOT1_START_MINUTE=number.solis8_timed_charge_start_minutes
CHARGE_SLOT1_END_HOUR=number.solis8_timed_charge_end_hours
CHARGE_SLOT1_END_MINUTE=number.solis8_timed_charge_end_minutes
CHARGE_SLOT1_SOC=number.solis8_timed_charge_soc
CHARGE_SLOT1_CURRENT=number.solis8_timed_charge_current

# ============================================
# SOLIS S6 DISCHARGE SLOT 1
# ============================================
DISCHARGE_SLOT1_START_HOUR=number.solis8_timed_discharge_start_hours
DISCHARGE_SLOT1_START_MINUTE=number.solis8_timed_discharge_start_minutes
DISCHARGE_SLOT1_END_HOUR=number.solis8_timed_discharge_end_hours
DISCHARGE_SLOT1_END_MINUTE=number.solis8_timed_discharge_end_minutes
DISCHARGE_SLOT1_SOC=number.solis8_timed_discharge_soc
DISCHARGE_SLOT1_CURRENT=number.solis8_timed_discharge_current

# ============================================
# INVERTER CAPABILITIES
# ============================================
INVERTER_MAX_POWER=8000
EXPORT_LIMIT=5000
BATTERY_RATE_MAX=8000

# ============================================
# EXPORT TARIFF
# ============================================
HAS_EXPORT=true
EXPORT_RATE=15.0

